@page "/register"
@using Client.Routing

<div class="d-flex align-items-center justify-content-center h-100 m-0">
    <div class="d-flex align-items-center justify-content-center flex-column h-75 w-75 register_form">
        <h1 class="mb-3">Crear cuenta</h1>
        <EditForm Model="ViewModel">
            <div class="form-group">
                <DataAnnotationsValidator />
                <input type="text" placeholder="Nombre" class="form-control mb-3" @bind="ViewModel.Nombre" />
                <input type="text" placeholder="Apellido" class="form-control mb-3" @bind="ViewModel.Apellidos" />
                <input type="text" placeholder="Nombre de usuario" class="form-control mb-3" @bind="ViewModel.Username" />
                <input type="text" placeholder="Email" class="form-control mb-3" @bind="ViewModel.Email" />
                <input type="text" placeholder="Contraseña" class="form-control mb-3" @bind="ViewModel.Password" />
                <input type="text" placeholder="Confirmar contraseña" class="form-control mb-3" @bind="ViewModel.Password" />
                <div class="d-flex justify-content-evenly">
                    <button type="button" class="btn btn-outline-primary" @onclick="_ => NavManager.NavigateTo(ClientRoutes.Login)">Volver</button>
                    <button type="submit" class="btn btn-primary" @onclick="_ => NavManager.NavigateTo(ClientRoutes.Login)">Crear cuenta</button>
                </div>
            </div>
        </EditForm>
    </div>
</div>